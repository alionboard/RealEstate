@model List<Customer>;
@{
    ViewData["Title"] = "Müşteriler";
}
<div class="d-block">
    <h3 class="d-inline">Müşteriler</h3>
    <a class="btn btn-primary float-right" asp-controller="Customer" asp-action="Add">Müşteri Ekle</a>
</div>
<div id="tableDiv" class="mt-3">
    <table id="customers" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tam Ad</th>
                <th>Ev Tel</th>
                <th>Cep Tel</th>
                <th>EPosta</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Fullname</td>
                    <td>@item.HousePhoneNumber</td>
                    <td>@item.MobileNumber</td>
                    <td>@item.Email</td>
                    <td class="text-center">
                        @*<a class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-user-minus"></i></a>*@
                        <a class="btn btn-primary" asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id"><i class="far fa-eye"></i></a>
                        <a class="btn btn-warning" asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-user-edit"></i></a>
                    </td>
                </tr>
            }
    </table>

</div>

@section Styles{
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">*@
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.bootstrap4.min.css">*@
    <link href="~/lib/datatables.net-buttons-bs4/buttons.bootstrap4.min.css" rel="stylesheet" />
}


